{
  "env": {
      "node": true,
      "es2021": true
  },
  "extends": [
    "plugin:@typescript-eslint/recommended",
    "prettier"
  ],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
      "ecmaVersion": 12,
      "sourceType": "module"
  },
  "plugins": [
    "@typescript-eslint",
    "prettier"
  ],
  "rules": {
    "prettier/prettier": [
      "error", {
        "printWidth": 80,
        "trailingComma": "es5",
        "semi": true,
        "singleQuote": true,
        "useTabs": false,
        "endOfLine": "auto",
        "max-len": ["error", { "code": 80 }]
      }
    ]
  }
}
